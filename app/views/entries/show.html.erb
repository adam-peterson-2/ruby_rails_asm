<div class="col-md-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3><strong>Entry</strong></h3>
        </div>
        <div class="panel-body">
            <%-# Title for the Start Date/Time-%>
            <h4><strong>Start Date/Time</strong></h4>
            <%-# Instances started time/date -%>
            <%= @entry.started_at %>
            <br><br>
            <h4><strong>End Date/Time</strong></h4>
            <%= @entry.ended_at %>
            <br><br>
            <h4><strong>Description</strong></h4>
            <%= @entry.content %>
            <br><br>
            <br><br>
            <%= button_to 'Delete Entry', entry_path, :class => 'btn btn-danger', :method => 'delete' %>
        </div>
    </div>
</div>
